[Unit]
Description=GitHub Compose Monitor (%i)
After=network.target docker.service
Requires=docker.service

[Service]
Type=oneshot
User=deploy
EnvironmentFile=/opt/github-monitor/projects/%i/.env
ExecStart=/opt/github-monitor/common/deploy.sh
SyslogIdentifier=github-monitor-%i
StandardOutput=journal
StandardError=journal
