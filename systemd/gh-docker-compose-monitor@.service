[Unit]
Description=GitHub Compose Monitor (%i)
After=network.target docker.service
Requires=docker.service

[Service]
Type=oneshot
User=composebot
ExecStart=/opt/gh-docker-compose-monitor/common/compose-deploy.sh --config-file=/opt/gh-docker-compose-monitor/projects/%i/config
SyslogIdentifier=gh-docker-compose-monitor-%i
StandardOutput=journal
StandardError=journal
